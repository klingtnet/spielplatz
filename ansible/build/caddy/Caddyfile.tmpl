git.{{ domain }}:80 {
    prometheus
    redir https://git.{{ domain }}{uri}
}
git.{{ domain }}:443 {
    prometheus
    import common.caddy
    tls self_signed
    proxy / localhost:{{ gitea_port }} {
        transparent
    }
}

