git.{{ domain }}:80 {
    import common.caddy
    redir https://git.{{ domain }}{uri}
}
git.{{ domain }}:443 {
    import common.caddy
    tls self_signed
    proxy / localhost:{{ gitea_port }} {
        transparent
    }
}

